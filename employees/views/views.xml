    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Employees" id="employees.menu_root" sequence="50"/>

    <!-- menu categories -->

    <menuitem name="Employees" id="employees.employee_menu" parent="employees.menu_root" action="employees.action_window"/>


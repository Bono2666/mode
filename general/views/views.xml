      <field name="name">general.country.view.form</field>
      <field name="model">general.country</field>
      <field name="arch" type="xml">
      <form string="Country">
        <sheet>
        <group>
          <!-- Add your fields here -->
          <field name="country_id"/>
          <field name="country_name"/>
        </group>
        </sheet>
      </form>
      </field>
    </record>
    

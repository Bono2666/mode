    <menuitem name="General" id="general.menu_root" sequence="90"/>

    <menuitem id="master_menu" name="Master Data" parent="general.menu_root" sequence="20"/>

    <menuitem name="Country" id="general.country_act" parent="general.master_menu" action="general.country_action" sequence="1"/>
    <menuitem name="State" id="general.state_act" parent="general.master_menu" action="general.state_action" sequence="2"/>

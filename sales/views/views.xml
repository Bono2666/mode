              <button string="Delete" class="oe_highlight opacity-50 pe-none" invisible="not id or is_edit or user_can_delete"/>
              <span class="min-w-0 text-truncate">
                <field name="model_description"/>
              </span>
              <style>
                .o_control_panel {
                  display: none !important;
                }
              </style>
            </header>
            <sheet>
              <div class="oe_title mb24">
                  <field name="customer_id"/>
                  <h1>
                      <field id="company" options="{'line_breaks': False}" widget="text" class="text-break" name="customer_name" placeholder="e.g. PT Kreatif Citra Indonesia" required="1" readonly="not is_edit and id"/>
                  </h1>
              </div>

              <group>
                  <group>
                      <span class="o_form_label o_td_label" name="address_name">
                          <b>Address</b>
                      </span>
                      <div class="o_address_format">
                          <field name="address" placeholder="Street..." readonly="not is_edit and id"/>
                          <field name="district" placeholder="District" class="o_address_street" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          <field name="city" placeholder="City" class="o_address_city" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          <field name="state" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          <div name="partner_address_country" class="d-flex justify-content-between">
                              <field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          </div>
                      </div>
                      <field name="npwp" placeholder="e.g. 08.178.554.2-123.321" readonly="not is_edit and id"/>
                  </group>
                  <group>
                      <field name="contact_name" readonly="not is_edit and id"/>
                      <field name="telephone" widget="phone" readonly="not is_edit and id"/>
                      <field name="email" widget="email" context="{'gravatar_image': True}" readonly="not is_edit and id"/>
                      <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com" readonly="not is_edit and id"/>
                  </group>
              </group>

              <notebook colspan="4">
                  <page string="Shipping Addresses" name="shipping_addresses" autofocus="autofocus">
                      <field name="ship_to_ids" mode="kanban" readonly="not is_edit and id">
                          <kanban>
                              <field name="customer_id" invisible="1"/>
                              <templates>
                                  <t t-name="kanban-box">
                                      <div t-att-class="oe_kanban_global_click">
                                          <div class="o_kanban_image">
                                              <img alt="Contact image" t-attf-src="general/static/src/img/shipping.png"/>
                                          </div>
                                          <div class="oe_kanban_details">
                                              <field name="ship_name"/>
                                              <div t-if="record.address">
                                                  <div>
                                                      <field name="district"/><t t-if="record.city"> </t>
                                                      <field name="city"/>
                                                  </div>
                                                  <field t-if="record.state.raw_value" name="state"/><t t-if="record.country"> </t>
                                                  <field name="country"/>
                                              </div>
                                          </div>
                                      </div>
                                  </t>
                              </templates>
                          </kanban>
                          <form string="Shipping Address">
                              <sheet>
                                  <field name="customer_id" invisible="1"/>
                                  <hr/>
                                  <group>
                                      <field name="ship_name" string="Ship Name" required="1"/>
                                      <label for="address" string="Address"/>
                                      <div>
                                          <div class="o_address_format" name="div_address">
                                              <field name="address" placeholder="Street..."/>
                                              <field name="district" placeholder="District" class="o_address_street" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                              <field name="city" placeholder="City" class="o_address_city" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                              <field name="state" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                              <field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                          </div>
                                      </div>
                                  </group>
                              </sheet>
                          </form>
                      </field>
                  </page>
                  <page name="sales" string="Sales">
                      <group name="container_row_2">
                          <group string="Sales" name="sale" priority="1">
                              <field name="sales_code" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          </group>
                          <group name="misc" string="Misc">
                              <field name="cust_category" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                              <field name="cust_type" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                              <field name="cust_area" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                          </group>
                      </group>
                  </page>
                  <page name="price_condition" string="Price Condition">
                      <field name="price_condition" placeholder="Price condition..." options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                  </page>
                  <page name="payment_terms" string="Payment Terms">
                      <field name="payment_terms" placeholder="Payment terms..." options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" readonly="not is_edit and id"/>
                  </page>
              </notebook>
            </sheet>
          </form>
      </field>
    </record>


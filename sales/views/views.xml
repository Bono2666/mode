    <!-- Top menu item -->

    <menuitem name="Sales" id="sales.menu_root" sequence="30"/>

    <!-- menu categories -->

    <menuitem name="Customer" id="sales.customer_menu" parent="sales.menu_root" action="sales.customer_action" sequence="1"/>
    <menuitem name="Product" id="sales.product_menu" parent="sales.menu_root" action="sales.products_action" sequence="2"/>
    <menuitem name="Customer Settings" id="sales.customer_settings_menu" parent="sales.menu_root" sequence="3"/>
    <menuitem name="Price Condition" id="sales.price_condition_menu" parent="sales.menu_root" action="sales.price_condition_action" sequence="4"/>

    <!-- actions -->

    <menuitem name="Customer Category" id="sales.cust_category" parent="sales.customer_settings_menu"
